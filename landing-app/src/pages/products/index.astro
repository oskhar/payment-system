const pageTitle: string = `Products | ${SITE.title}`;
const metaDescription =
  "Explore the durability and precision of Ghina Multiprima tools, designed for both professionals and enthusiasts.";
const ogTitle = "Hardware Tools | Ghina Multiprima";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/products",
    url: "https://screwfast.uk/products",
    name: "Hardware Tools | Ghina Multiprima",
    description:
      "Explore the durability and precision of Ghina Multiprima tools, designed for both professionals and enthusiasts.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk",
      name: "Ghina Multiprima",
      description:
        "Ghina Multiprima offers top-tier hardware tools and expert construction services to meet all your project needs.",
    },
    inLanguage: "en-US",
  }}
>
  {/* Features statistics section */}
  <FeaturesStatsAlt
    title="Kenapa Pilih Ghina Multiprima?"
    subTitle="Wujudkan sistem keamanan terbaik bersama Toko Muvie. Dari rumah tinggal hingga proyek industri berskala besar, solusi kami dirancang untuk memberikan pengawasan yang andal dan profesional."
    benefits={[
      "Perangkat CCTV berkualitas tinggi dengan performa tahan lama.",
      "Solusi keamanan cerdas yang disesuaikan dengan kebutuhan modern.",
      "Dukungan teknis profesional untuk setiap tahap proyek Anda.",
    ]}
  />
  {/* Testimonials section */}
  <ClientsSection
    title="Brand Produk"
    subTitle="Berikut adalah beberapa brand yang tersedia"
    partners={brandData}
  />
  {/* Testimonials section */}
  <div class="mb-20 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {
      products.map((product) => (
          <ProductCard
            name={product.name}
            price={product.price}
            image={product.image}
            description={product.description}
            channel={product.channel}
            link={product.link}
          />
      ))
    }
  </div></MainLayout
>
