---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";

// --- Local Image Imports ---
// Pastikan path gambar ini sesuai dengan struktur proyek Anda.
import heroImage from "@/assets/images/hero.jpg";
import featureImage from "@/assets/images/produk-sembako.jpg";
import pasokanUsahaImage from "@/assets/images/pasokan-usaha.png";
import kebutuhanHarianImage from "@/assets/images/kebutuhan-harian.png";
import stokWarungImage from "@/assets/images/stok-warung.png";
import avatar1 from "@/assets/images/avatars/avatar1.jpg";
import avatar2 from "@/assets/images/avatars/avatar2.jpg";
import avatar3 from "@/assets/images/avatars/avatar3.jpg";
import avatar4 from "@/assets/images/avatars/avatar4.jpg";
import testimonialAvatar from "@/assets/images/avatars/testimonial-avatar.jpg";
import { partnersData } from "@/data_files/constants";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";

// --- Data Definitions ---

// Avatars for Hero Section using local imports
const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title=`Lengkapi Kebutuhan Pokok Anda di <span
        class="text-yellow-500 dark:text-yellow-400">Toko Muvie</span>`
    subTitle="Pusat grosir dan retail sembako terlengkap dengan harga terbaik. Melayani kebutuhan rumah tangga dan usaha Anda dengan sepenuh hati."
    primaryBtn="Lihat Produk Kami"
    primaryBtnURL="/produk"
    secondaryBtn="Hubungi Tim Penjualan"
    secondaryBtnURL="/kontak"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`Dari <span class="font-bold">5.2k+</span> Ulasan Pelanggan`
    src={heroImage}
    alt="Troli belanja yang penuh dengan berbagai produk sembako segar"
  />

  <ClientsSection
    title="Dipercaya oleh Banyak Customer"
    subTitle="Kami bangga menjadi pemasok utama bagi berbagai usaha kuliner dan toko di sekitar kita."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Kualitas Terjamin, Harga Bersaing"
    subTitle="Di Toko Muvie, kami berkomitmen untuk menyediakan produk sembako berkualitas tinggi dengan harga yang bersaing. Kami melakukan seleksi ketat untuk memastikan hanya produk terbaik yang sampai ke tangan Anda, baik untuk konsumsi harian maupun untuk menunjang bisnis Anda."
    src={featureImage}
    alt="Berbagai macam produk sembako seperti beras, minyak, dan telur"
    features={features}
  />

  <FeaturesNavs
    title=`Solusi Tepat untuk Semua Kebutuhan Anda di <span class="text-yellow-500 dark:text-yellow-400">Toko Muvie</span>.`
    tabs={[
      {
        heading: "Pasokan Usaha Kuliner",
        content:
          "Kami adalah mitra andal untuk pasokan bahan pokok berkualitas bagi restoran, kafe, dan katering. Dapatkan harga grosir spesial untuk menjaga kualitas rasa dan kelancaran bisnis Anda.",
        svg: "tools",
        src: pasokanUsahaImage,
        alt: "Rak-rak toko yang penuh dengan pasokan sembako untuk bisnis",
        first: true,
      },
      {
        heading: "Kebutuhan Pokok Harian",
        content:
          "Belanja kebutuhan pokok harian kini lebih mudah dan hemat. Kami menyediakan beragam produk dalam kemasan retail yang praktis untuk memenuhi kebutuhan dapur keluarga Anda setiap hari.",
        svg: "dashboard",
        src: kebutuhanHarianImage,
        alt: "Seorang pelanggan memilih produk sembako dari rak toko",
        second: true,
      },
      {
        heading: "Stok Warung & Toko",
        content:
          "Lengkapi stok warung atau toko kelontong Anda dengan produk-produk paling laris dari kami. Nikmati kemudahan sistem pembelian dan pengiriman yang andal untuk mendukung pertumbuhan usaha Anda.",
        svg: "house",
        src: stokWarungImage,
        alt: "Tumpukan karung beras dan produk lain yang siap didistribusikan ke warung",
      },
    ]}
  />

  <TestimonialsSection
    title="Apa Kata Pelanggan Setia Kami"
    subTitle="Kepuasan Anda adalah prioritas utama. Kami senang bisa menjadi bagian dari kesuksesan usaha dan kebahagiaan keluarga."
    statistics={[
      {
        count: "500+",
        description:
          "rekanan usaha setia (restoran, warung, katering)",
      },
      {
        count: "1000+",
        description:
          "jenis produk sembako tersedia untuk Anda pilih",
      },
      {
        count: "10.000+",
        description:
          "pelanggan retail yang berbelanja setiap bulannya",
      },
      {
        count: "24 Jam",
        description: "layanan pesan antar untuk area terdekat",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Pertanyaan<br />yang Sering Diajukan" faqs={faqs} />

  <HeroSectionAlt
    title="Siap Memenuhi Kebutuhan Anda!"
    subTitle="Toko Muvie adalah mitra terpercaya untuk semua kebutuhan sembako Anda. Hubungi kami untuk penawaran grosir atau kunjungi toko kami untuk pengalaman belanja yang memuaskan."
    url="/kontak"
  />
</MainLayout>
