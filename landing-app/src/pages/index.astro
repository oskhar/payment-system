// Features data
const features = [
  {
    icon: "ph:shopping-cart-bold",
    title: "Produk Terlengkap",
    description: "Dari beras, minyak, gula, hingga bumbu dapur, kami menyediakan semua kebutuhan pokok Anda dalam satu tempat.",
  },
  {
    icon: "ph:tag-bold",
    title: "Harga Kompetitif",
