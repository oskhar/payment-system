// Testimonials Data using local import for the avatar
const testimonials = [
  {
    content:
      "Toko Muvie benar-benar penyelamat bisnis katering saya. Produknya lengkap, harganya sangat bersaing, dan pelayanannya ramah. Pengiriman juga selalu tepat waktu. Sangat direkomendasikan!",
    author: "Budi Santoso",
