    { src: "https://placehold.co/158x48/ffffff/cbd5e1?text=Katering+Lezat", alt: "Logo Katering Lezat" },
    { src: "https://placehold.co/158x48/ffffff/cbd5e1?text=Cafe+Senja", alt: "Logo Cafe Senja" },
